---
import { Icon } from "astro-icon/components";
import { getPageInfo } from "../lib/wp";

const { acf } = await getPageInfo("contact-data");

const telefono = acf.numbers?.telefono_circuloMilitar || "No disponible";
const email = acf.emails?.email_cobiene || "no@disponible.com";
const direccion = acf.directions?.google_maps_circulo_militar || "#";
const direccionName = acf.directions?.circulo_militar || "Dirección no disponible";
const siteName = acf.name || "Círculo Militar";
const whatsappURL = acf.socialLinks?.whatsapp_cobiene || "#";
const facebookURL = acf.socialLinks?.facebook_acmsts || "#";
const horario = acf.officeHour || "";
---

<footer id="contacto" class="bg-gradient-to-r from-blue-900 via-gray-900 to-black text-white">
  <div class="max-w-6xl mx-auto px-8 py-16 space-y-12">
    <div
      class="flex flex-col items-center text-center space-y-2 md:space-y-4 transition-transform duration-300 ease-in-out hover:scale-105"
    >
      <img
        src="/iconFooter.webp"
        alt="Logo Círculo Militar"
        class="w-28 md:w-32 mb-2 md:mb-4 transition-transform duration-300 ease-in-out hover:scale-110"
      />
      <h1 class="text-2xl md:text-4xl font-bold tracking-tight">¡Trabajando por su bienestar!</h1>
      <h1 class="text-2xl md:text-4xl font-bold tracking-tight">Contáctanos: 01 6449277</h1>
      <p class="mt-2 text-gray-400 text-base md:text-lg tracking-wide">CÍRCULO DE SUBOFICIALES</p>
    </div>
    <div class="flex justify-center space-x-8">
      <a
        href={direccion}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="WhatsApp"
        class="transition-transform duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400"
      >
        <Icon name="tabler:map-pin" class="w-12 h-12 md:w-16 md:h-16 text-red-400" />
      </a>
      <a
        href={whatsappURL}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="WhatsApp"
        class="transition-transform duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400"
      >
        <Icon name="tabler:brand-whatsapp" class="w-12 h-12 md:w-16 md:h-16 text-green-400" />
      </a>
      <a
        href={facebookURL}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Facebook"
        class="transition-transform duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600"
      >
        <Icon name="tabler:brand-facebook" class="w-12 h-12 md:w-16 md:h-16 text-blue-600" />
      </a>
      <a
        href={`mailto:${email}`}
        aria-label="Email"
        class="transition-transform duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400"
      >
        <Icon name="tabler:mail" class="w-12 h-12 md:w-16 md:h-16 text-yellow-400" />
      </a>
    </div>
    <hr class="border-t border-gray-700 mx-auto w-3/4" />

    <div class="flex flex-col md:flex-row md:items-center gap-8 justify-around items-center pt-4">
      <div class="flex flex-col items-center text-center md:basis-1/3 space-y-2">
        <Icon
          name="tabler:phone"
          class="w-14 h-14 text-green-400 transition-transform duration-300 ease-in-out hover:scale-110"
        />
        <div>
          <a
            href={`tel:${telefono}`}
            class="block text-lg md:text-xl font-semibold hover:text-green-400 transition-colors duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400"
          >
            {telefono}
          </a>
          <p class="text-sm text-gray-300">{horario}</p>
        </div>
      </div>
      <div class="flex flex-col items-center text-center md:basis-1/3 space-y-2">
        <Icon
          name="tabler:mail"
          class="w-14 h-14 text-blue-400 transition-transform duration-300 ease-in-out hover:scale-110"
        />
        <div>
          <a
            href={`mailto:${email}`}
            class="block text-lg md:text-xl font-semibold hover:text-blue-400 transition-colors duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400"
          >
            {email}
          </a>
          <p class="text-sm text-gray-300">Soporte en Línea</p>
        </div>
      </div>
      <div class="flex flex-col items-center text-center md:basis-1/3 space-y-2">
        <Icon
          name="tabler:map-pin"
          class="w-14 h-14 text-red-400 transition-transform duration-300 ease-in-out hover:scale-110"
        />
        <div>
          <a
            href={direccion}
            target="_blank"
            rel="noopener noreferrer"
            class="block text-lg md:text-xl font-semibold hover:text-red-400 transition-colors duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400"
          >
            Chorrillos, Perú
          </a>
          <p class="text-sm text-gray-300">{direccionName}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full bg-black py-4 mt-8">
    <p class="text-sm text-gray-500 text-center">
      © 2025 {siteName} - Diseñado con
      <Icon
        name="tabler:heart"
        class="inline w-5 h-5 text-red-500 transition-transform duration-300 ease-in-out hover:scale-125"
      />
      por AgenciaServitec
    </p>
  </div>
</footer>
