<header
  id="navbar"
  class="fixed top-0 w-full z-50 text-black shadow-lg transition-all duration-500 before:absolute before:inset-0 before:bg-white/60 before:backdrop-blur-sm before:transition-all before:duration-500"
>
  <div class="container mx-auto flex justify-between items-center px-4 py-3 relative z-10">
    <a href="/" class="flex items-center group">
      <img
        src="/icon-circulo-militar-sts.webp"
        alt="Logo"
        class="w-32 md:w-64 transition-all duration-300 hover:scale-95  shadow-white/30"
      />
    </a>

    <nav class="hidden md:flex space-x-6 text-base font-medium">
      <a
        href="/"
        class="relative group transition-all duration-300 py-2 px-3 rounded-lg hover:bg-white/10"
      >
        <span class="relative">
          Inicio
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
      <a
        href="#nosotros"
        class="relative group transition-all duration-300 py-2 px-4 rounded-lg hover:bg-black/10"
      >
        <span class="relative">
          Nosotros
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
      <a
        href="#sedes"
        class="relative group transition-all duration-300 py-2 px-4 rounded-lg hover:bg-black/10"
      >
        <span class="relative">
          Sedes
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
      <a
        href="/galeria"
        class="relative group transition-all duration-300 py-2 px-4 rounded-lg hover:bg-black/10"
      >
        <span class="relative">
          Galería
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
      <a
        href="/socio"
        class="relative group transition-all duration-300 py-2 px-4 rounded-lg hover:bg-black/10"
      >
        <span class="relative">
          Socio
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
      <a
        href="#contacto"
        class="relative group transition-all duration-300 py-2 px-4 rounded-lg hover:bg-black/10"
      >
        <span class="relative">
          Contacto
          <span class="absolute left-0 -bottom-1 w-full h-px bg-black/30 transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"></span>
        </span>
      </a>
    </nav>

    <button id="menu-btn" class="md:hidden text-black/90 hover:text-black transition-colors duration-300 p-1.5">
      <svg
        id="menu-icon"
        class="w-7 h-7"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  <div
    id="mobile-overlay"
    class="fixed inset-0 hidden transition-opacity duration-300 z-40"
  ></div>

  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-64 bg-white/95 backdrop-blur-lg shadow-2xl transform translate-x-full transition-transform duration-300 z-50"
  >
    <nav class="flex flex-col p-4 space-y-3">
      <button id="close-menu" class="self-end text-black/80 hover:text-black transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <a href="/" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Inicio</a>
      <a href="#nosotros" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Nosotros</a>
      <a href="#sedes" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Sedes</a>
      <a href="/galeria" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Galería</a>
      <a href="/socio" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Socio</a>
      <a href="#contacto" class="text-black/80 hover:text-black py-3 px-4 rounded-lg hover:bg-black/10 transition-all duration-300">Contacto</a>
    </nav>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const navbar = document.getElementById("navbar");
      const menuBtn = document.getElementById("menu-btn");
      const mobileMenu = document.getElementById("mobile-menu");
      const closeMenu = document.getElementById("close-menu");
      const mobileOverlay = document.getElementById("mobile-overlay");

      const closeMobileMenu = () => {
        mobileMenu.classList.add("translate-x-full");
        mobileOverlay.classList.remove("opacity-100");
        mobileOverlay.classList.add("hidden");
      };

      const handleHashLinks = () => {
        document.querySelectorAll('a[href^="#"]').forEach((link) => {
          link.addEventListener("click", function (e) {
            e.preventDefault();
            const hash = this.getAttribute("href");
            const isHomePage =
              window.location.pathname === "/" || window.location.pathname === "/index.html";

            if (!isHomePage) {
              window.location.href = `/${hash}`;
            } else {
              const target = document.querySelector(hash);
              if (target) {
                target.scrollIntoView({ behavior: "smooth" });
              }
              closeMobileMenu();
            }
          });
        });
      };

      handleHashLinks();

      let lastScroll = 0;
      window.addEventListener("scroll", () => {
        const currentScroll = window.scrollY;
        if (currentScroll > lastScroll && currentScroll > 50) {
          navbar.classList.add("-translate-y-full");
        } else {
          navbar.classList.remove("-translate-y-full");
        }
        lastScroll = currentScroll;
      });

      const openMenu = () => {
        mobileMenu.classList.remove("translate-x-full");
        mobileOverlay.classList.remove("hidden");
        mobileOverlay.classList.add("opacity-100");
      };

      menuBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        openMenu();
      });

      closeMenu.addEventListener("click", (e) => {
        e.stopPropagation();
        closeMobileMenu();
      });

      mobileOverlay.addEventListener("click", closeMobileMenu);

      document.addEventListener("click", (event) => {
        if (!menuBtn.contains(event.target) && !mobileMenu.contains(event.target)) {
          closeMobileMenu();
        }
      });
    });
  </script>
</header>
