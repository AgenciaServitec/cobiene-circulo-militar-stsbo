---
import { getPostBySlug } from "../../lib/wp";
const { title, content } = await getPostBySlug("nuestros-recuerdos");
---

<section class="pt-20 py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-[#0A192F] to-[#1D4ED8]/5">
  <div class="max-w-7xl mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-black text-[#0A192F] uppercase tracking-tight mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FBBF24] to-[#D97706]">
          {title}
        </span>
      </h1>
      <div class="h-1 w-24 bg-[#FBBF24] mx-auto rounded-full"></div>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
      <Fragment set:html={content} />
    </div>
  </div>
</section>

<style global>
  .wp-block-video {
    @apply relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] hover:z-10 border-2 border-[#FBBF24]/20;
  }

  .wp-block-video video {
    @apply w-full aspect-video object-cover;
  }

  .wp-block-video::before {
    @apply absolute inset-0 bg-gradient-to-t from-[#0A192F]/60 to-transparent pointer-events-none;
    content: "";
  }

  .wp-block-video:hover {
    @apply border-[#FBBF24];
  }
</style>
